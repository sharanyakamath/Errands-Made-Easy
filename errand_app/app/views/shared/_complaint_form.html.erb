<%= form_for(@complaint) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :title, placeholder: "Type of complaint" %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write your errand here" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
