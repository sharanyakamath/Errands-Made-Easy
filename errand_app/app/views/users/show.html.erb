<%# provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <h1> <%= @user.phone %> </h1> 
      <h3> <%= @user.address %> </h3>

    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.complaints.any? %>
      <h3>Errands (<%= @user.complaints.count %>)</h3>
      <ol class="complaints">
        <%= render @complaints %>
      </ol>
    <% end %>
  </div>

</div>
